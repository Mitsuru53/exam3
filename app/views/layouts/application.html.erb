<!DOCTYPE html>
<html>
  <head>
    <title>Exam3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "facelibro", topics_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "お問い合わせ",topics_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "投稿",topics_path %></li>
                <li><%= link_to "ユーザー一覧",users_path if user_signed_in? %></li>
                <li><%= link_to "メッセージ",conversations_path %></li>
              </ul>
            </li>
            <% if user_signed_in? %>
              <li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete %></li>
            <%  else %>
              <li><%= link_to 'ログイン',new_user_session_path %></li>
              <li><%= link_to 'サインアップ',new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

    <%= yield %>
  </body>
</html>
